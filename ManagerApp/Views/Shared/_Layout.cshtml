<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Manager App</title>

    <link rel="stylesheet" href="~/css/ManagerHomeStyle.css" />
    <link href="https://cdn.jsdelivr.net/npm/maplibre-gl@5.3.0/dist/maplibre-gl.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    @RenderSection("Styles", required: false)
    <!-- Подключаем MapLibre перед `OrderDetails.js` -->
    <script src="https://cdn.jsdelivr.net/npm/maplibre-gl@5.3.0/dist/maplibre-gl.js"></script>
</head>
<body>
    <!-- =============== Navigation ================ -->
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="cloudy-night"></ion-icon>
                        </span>
                        <span class="title">Climate system</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="ManagerHome" asp-action="Home">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Dashboard</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="Orders" asp-action="Orders">
                        <span class="icon">
                            <ion-icon name="chatbox-ellipses"></ion-icon>
                        </span>
                        <span class="title">Orders</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="BTU" asp-action="BTUCalculator">
                        <span class="icon">
                            <ion-icon name="calculator-outline"></ion-icon>
                        </span>
                        <span class="title">BTU Calculator</span>
                    </a>
                </li>

                <li>
                    <a asp-controller="BTU" asp-action="SearchConditioners">
                        <span class="icon">
                            <ion-icon name="thermometer-outline"></ion-icon>
                        </span>
                        <span class="title">Conditioners</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="hammer"></ion-icon>
                        </span>
                        <span class="title">Warehouse</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="globe-outline"></ion-icon>
                        </span>
                        <span class="title">Navigation</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="help-outline"></ion-icon>
                        </span>
                        <span class="title">Help</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="settings-outline"></ion-icon>
                        </span>
                        <span class="title">Settings</span>
                    </a>
                </li>

                <!-- Sign Out -->
                <li>
                    <a href="#" onclick="document.getElementById('logoutForm').submit(); return false;">
                        <span class="icon">
                            <ion-icon name="log-out-outline"></ion-icon>
                        </span>
                        <span class="title">Sign Out</span>
                    </a>

                    <form id="logoutForm" asp-controller="ManagerHome" asp-action="Logout" method="post" style="display:none;">
                        @Html.AntiForgeryToken()
                    </form>
                </li>
            </ul>
        </div>

        <!-- ========================= Main ==================== -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                <div class="user">
                    <img src="~/imgs/Home/customer02.jpg" alt="">
                </div>
            </div>

            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

  
    <script src="~/js/Layout.js"></script>
    <script type="module" src="https://cdn.jsdelivr.net/npm/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://cdn.jsdelivr.net/npm/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
