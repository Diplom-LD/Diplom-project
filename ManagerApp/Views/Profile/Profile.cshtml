@model ManagerApp.Models.AuthRequest.UpdateProfileRequest

@{
    ViewData["Title"] = "User Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/UserProfile.css" />
}

<div id="vanta-bg"></div>
<div class="vanta-mask"></div>
<div class="user-profile-container">
    <h2>User Profile</h2>

    <form id="userProfileForm" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label>Username</label>
            <input type="text" id="UserName" readonly />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="email" id="Email" readonly />
        </div>

        <div class="form-group">
            <label>Role</label>
            <input type="text" id="Role" readonly />
        </div>

        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName" required />
        </div>

        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input type="text" id="LastName" name="LastName" value="@Model.LastName" required />
        </div>

        <div class="form-group">
            <label for="PhoneNumber">Phone Number</label>
            <input type="tel" id="PhoneNumber" name="Phone" value="@Model.Phone" required />
        </div>

        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" id="Address" name="Address" value="@Model.Address" required />
        </div>

        <div class="form-actions">
            <button type="submit">Update Profile</button>
            <span id="updateStatus" class="status-message">
                @if (TempData["Success"] != null)
                {
                    <span style="color:green">@TempData["Success"]</span>
                }
                @if (TempData["Error"] != null)
                {
                    <span style="color:red">@TempData["Error"]</span>
                }
            </span>
        </div>
    </form>
</div>

<div id="confirmModal" class="modal hidden">
    <div class="modal-content">
        <p>Are you sure you want to update your profile?</p>
        <div class="modal-buttons">
            <button type="button" id="confirmYes">Yes</button>
            <button type="button" id="confirmNo">No</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/three@0.142.0/build/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.waves.min.js"></script>
    <script src="~/js/Profile/UserProfile.js"></script>
}
