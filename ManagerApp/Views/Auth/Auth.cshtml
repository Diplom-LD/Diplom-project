@model ManagerApp.Models.AuthRequest.AuthViewModel

@{
    ViewData["Title"] = "Auth Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/LoginPageStyle.css" asp-append-version="true">
    <title>Login Page</title>
</head>
<body>

    <div class="main-container" id="main-container">

        <!-- Регистрация (Sign Up) -->
        <div class="form-container sign-up-container">
            <form asp-action="SignUp" asp-controller="Auth" method="post" id="signUpForm">
                <h1>Create Account</h1>
                <span>Use your verification code for registration</span>

                <input asp-for="RegisterModel.Login" name="Login" placeholder="Login" required />
                <span asp-validation-for="RegisterModel.Login" class="text-danger"></span>

                <input asp-for="RegisterModel.Email" name="Email" placeholder="Email" required />
                <span asp-validation-for="RegisterModel.Email" class="text-danger"></span>

                <input asp-for="RegisterModel.Password" name="Password" placeholder="Password" type="password" required />
                <span asp-validation-for="RegisterModel.Password" class="text-danger"></span>

                <input asp-for="RegisterModel.ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" type="password" required />
                <span asp-validation-for="RegisterModel.ConfirmPassword" class="text-danger"></span>

                <input asp-for="RegisterModel.FirstName" name="FirstName" placeholder="First Name" required />
                <span asp-validation-for="RegisterModel.FirstName" class="text-danger"></span>

                <input asp-for="RegisterModel.LastName" name="LastName" placeholder="Last Name" required />
                <span asp-validation-for="RegisterModel.LastName" class="text-danger"></span>

                <input asp-for="RegisterModel.Phone" name="Phone" placeholder="Phone" required />
                <span asp-validation-for="RegisterModel.Phone" class="text-danger"></span>

                <input asp-for="RegisterModel.Address" name="Address" placeholder="Address" required />
                <span asp-validation-for="RegisterModel.Address" class="text-danger"></span>

                <input asp-for="RegisterModel.RegistrationCode" name="RegistrationCode" placeholder="Verification Code" />
                <span asp-validation-for="RegisterModel.RegistrationCode" class="text-danger"></span>

                <button type="submit">Sign Up</button>
            </form>
        </div>

        <!-- Вход (Sign In) -->
        <div class="form-container sign-in-container">
            <form asp-action="SignIn" asp-controller="Auth" method="post" id="signInForm">
                <h1>Sign In</h1>
                <span>Use your login/email and password</span>

                <input asp-for="LoginModel.Identifier" name="Identifier" placeholder="Login or Email" required />
                <span asp-validation-for="LoginModel.Identifier" class="text-danger"></span>

                <input asp-for="LoginModel.Password" name="Password" placeholder="Password" type="password" required />
                <span asp-validation-for="LoginModel.Password" class="text-danger"></span>

                <a href="#">Forget Your Password?</a>
                <button type="submit">Sign In</button>
            </form>
        </div>

        <!-- Панель переключения между входом и регистрацией -->
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Welcome Back!</h1>
                    <p>Enter your personal details to use all of site features</p>
                    <button class="hidden" id="login">Sign in</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Hello, Worker</h1>
                    <p>Register with your personal details to use all of site features</p>
                    <button class="hidden" id="register">Sign Up</button>
                </div>
            </div>
        </div>

    </div>

    <script src="~/js/LoginPageScript.js" asp-append-version="true"></script>
</body>
</html>
