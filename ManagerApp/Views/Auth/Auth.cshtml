@model ManagerApp.Models.AuthRequest.AuthViewModel

@{
    ViewData["Title"] = "Auth Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/LoginPageStyle.css" asp-append-version="true">
    <title>Login Page</title>
</head>
<body>

    <div class="main-container" id="main-container">

        <!-- Регистрация (Sign Up) -->
        <div class="form-container sign-up-container">
            <form id="signUpForm">
                <h1>Create Account</h1>
                <span>Use your verification code for registration</span>

                <div id="register-error-message" class="error-message text-danger"></div>

                <input id="register-login" name="Login" placeholder="Login" required />
                <input id="register-email" name="Email" placeholder="Email" required />
                <input id="register-password" name="Password" placeholder="Password" type="password" required />
                <input id="register-confirm-password" name="ConfirmPassword" placeholder="Confirm Password" type="password" required />
                <input id="register-firstname" name="FirstName" placeholder="First Name" required />
                <input id="register-lastname" name="LastName" placeholder="Last Name" required />
                <input id="register-phone" name="Phone" placeholder="Phone" required />
                <input id="register-address" name="Address" placeholder="Address" required />
                <input id="register-code" name="RegistrationCode" placeholder="Verification Code" />

                <button type="submit">Sign Up</button>
            </form>
        </div>

        <!-- Вход (Sign In) -->
        <div class="form-container sign-in-container">
            <form id="signInForm">
                <h1>Sign In</h1>
                <span>Use your login/email and password</span>

                <div id="login-error-message" class="error-message text-danger"></div>

                <input id="login-identifier" name="Identifier" placeholder="Login or Email" required />
                <input id="login-password" name="Password" placeholder="Password" type="password" required />

                <a href="#">Forget Your Password?</a>
                <button type="submit">Sign In</button>
            </form>
        </div>

        <!-- Панель переключения между входом и регистрацией -->
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Welcome Back!</h1>
                    <p>Enter your personal details to use all of site features</p>
                    <button class="hidden" id="login">Sign in</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Hello, Manager</h1>
                    <p>Register with your personal details to use all of site features</p>
                    <button class="hidden" id="register">Sign Up</button>
                </div>
            </div>
        </div>

    </div>

    <script src="~/js/Auth/LoginPageScript.js" asp-append-version="true"></script>
</body>
</html>
