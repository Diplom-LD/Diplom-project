<!-- Modal for editing equipment -->
<div id="modalEquipment" class="modal hidden">
    <div class="modal-content">
        <h2>Edit Equipment</h2>
        <input type="text" id="equipName" placeholder="Model Name" />
        <input type="number" id="equipBTU" placeholder="BTU" />
        <input type="text" id="equipArea" placeholder="Serves (m²)" />
        <input type="number" id="equipPrice" placeholder="Price (MDL)" />
        <input type="number" id="equipQty" placeholder="Quantity" />
        <div class="modal-actions">
            <button class="save-button" onclick="saveEquipment()">Save</button>
            <button class="cancel-button" data-modal="modalEquipment">Cancel</button>
        </div>
    </div>
</div>

